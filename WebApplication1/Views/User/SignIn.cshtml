@model Users

<div class="d-flex justify-content-center">
    <form asp-action="SignIn" class="mb-3 w-25" method="post">
        <div class="form-group">
            <label for="PhoneNumber" class="form-label">Phone number</label>
            <input class="form-control" type="text" id="PhoneNumber" name="PhoneNumber" placeholder="PhoneNumber" />
        </div>
        <div class="form-group">
            <label for="Password" class="form-label">Password</label>
            <input class="form-control" type="text" id="Password" name="Password" placeholder="Password" />
        </div>
        <input class="form-control btn-primary" type="submit" value="Sign in" />
        <a asp-controller="User" asp-action="SignUp" class="form-control btn-primary mt-1">Sign up</a>
    </form>
</div>